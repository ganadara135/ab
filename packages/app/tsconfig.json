{
  "compilerOptions": {
    "baseUrl": ".",
    // "outDir": "build/dist",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["es6", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest"
  ]
}
